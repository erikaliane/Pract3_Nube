<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Estudiantes</title>

    <!-- Como un enlace -->
<nav class="navbar navbar-black bg-black ">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="#">Estudiantes</a>
    </div>
  </nav>
  
  
  </head>
  <body>
   

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

   <div class="container">
       
    <a href="/create" class="btn btn-outline-info mt-4">Registrar</a>

        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-info text-white">
                    <th scope="col">CODIGO</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">APELLIDOS</th>
                    <th scope="col">CORREO</th>
                    <th scope="col">NUMERO</th>
                    <th scope="col">IMAGEN</th>
                    <th scope="col">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((estudiante)=> { %>
                <tr>
                    <td><%= estudiante.codigo %> </td>
                    <td><%= estudiante.nombre %> </td>
                    <td><%= estudiante.apellidos %> </td>
                    <td><%= estudiante.correo %> </td>
                    <td><%= estudiante.numero %> </td>
                    <td>

                      <img src="https://pract3ventura.s3.amazonaws.com/<%= estudiante.imagen %>" alt="<%= estudiante.imagen %>" height="50">
                      <%= estudiante.imagen %> 
                    </td>
                    <td>
                      <a href="/edit/<%= estudiante.codigo %>" class="btn btn-outline-success">Editar </a>
                      <a href="/delete/<%= estudiante.codigo %>" class="btn btn-outline-danger">Eliminar</a>
                    </td>
                </tr>

                <% })   %>
            </tbody>
        </table>
   </div>



  </body>
</html>